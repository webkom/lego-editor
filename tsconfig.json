{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2019", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,

    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true
  }
}
